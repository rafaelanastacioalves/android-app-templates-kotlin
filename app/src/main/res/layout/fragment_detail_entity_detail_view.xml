<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools">

	<data>
		<import type="com.example.rafaelanastacioalves.moby.domain.entities.Resource"/>
		<import type="androidx.lifecycle.LiveData"/>
		<import type="com.example.rafaelanastacioalves.moby.domain.entities.EntityDetails"/>
		<variable
			name="entityDetail"
			type="LiveData&lt;Resource&lt;EntityDetails>>" />
		<variable
			name="loadListener"
			type="com.squareup.picasso.Callback" />
	</data>

	<androidx.core.widget.NestedScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		app:layout_anchor="@id/detail_entity_name_detail_appbar"
		app:layout_anchorGravity="top|center"
		app:layout_behavior="@string/appbar_scrolling_view_behavior">

		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			tools:context=".ui.entitydetailing.EntityDetailActivity">

			<androidx.appcompat.widget.AppCompatImageView
				android:id="@+id/entity_detail_imageview"
				android:layout_width="0dp"
				android:layout_height="0dp"
				android:scaleType="centerCrop"
				android:transitionName="@string/entity_imageview_transition_name"
				app:layout_constraintDimensionRatio="H,3:2"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				app:imageUrl="@{entityDetail.data.imageUrl}"
				app:loadListener="@{loadListener}"
				app:srcCompat="@drawable/ic_placeholder_map" />

			<TextView
				android:id="@+id/detail_entity_detail_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="@dimen/default_internal_margin"
				android:layout_marginStart="@dimen/default_internal_margin"
				android:layout_marginTop="@dimen/default_internal_margin"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/entity_detail_imageview"
				tools:text="@{entityDetail.data.price}" />


		</androidx.constraintlayout.widget.ConstraintLayout>
	</androidx.core.widget.NestedScrollView>
</layout>

