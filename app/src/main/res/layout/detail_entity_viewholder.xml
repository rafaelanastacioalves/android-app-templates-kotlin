<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/detail_container"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">


	<androidx.constraintlayout.widget.ConstraintLayout
		android:id="@+id/additionalViewContainer"
		android:visibility="gone"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginLeft="16dp"
		app:layout_constraintEnd_toEndOf="parent"
		android:layout_marginEnd="8dp"
		android:layout_marginStart="16dp"
		app:layout_constraintTop_toBottomOf="@+id/main_entity_imageview"
		android:layout_marginRight="8dp"
		tools:visibility="visible"
		app:layout_constraintStart_toStartOf="parent">

		<TextView
			android:id="@+id/entity_detail_title_textview"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/colorPrimary"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			tools:text="@string/detail_entitiy_title_textview" />
	</androidx.constraintlayout.widget.ConstraintLayout>


	<androidx.appcompat.widget.AppCompatImageView
		android:id="@+id/main_entity_imageview"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_marginEnd="16dp"
		android:layout_marginStart="16dp"
		android:scaleType="centerCrop"
		android:transitionName="@string/entity_imageview_transition_name"
		app:layout_constraintDimensionRatio="H,4:3"
		android:layout_marginTop="16dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:srcCompat="@drawable/ic_placeholder_map" />


</androidx.constraintlayout.widget.ConstraintLayout>